extends ../layout

block content
    .container
        .row
            .col-12
                video(src="#{movie.flash}", width="100%", controls="controls", preload="preload")
            .col-12
                dl.dl-horizontal
                    dt 电影名字
                    dd= movie.title
                    dt 导演
                    dd= movie.doctor
                    dt 国家
                    dd= movie.country
                    dt 语言
                    dd= movie.language
                    dt 上映年份
                    dd= movie.year
                    dt 简介
                    dd= movie.summary